/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  --primary-color: #007AFF;
  --background-color: #f5f5f5;
  --card-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  --transition-normal: all 0.3s ease;
}

/* 按钮基础样式 */
button {
  font-size: 32rpx;
  border-radius: 8rpx;
}

button[type="primary"] {
  background-color: #007AFF;
}

button[type="warn"] {
  background-color: #ff4d4f;
}

/* 输入框基础样式 */
input, textarea {
  width: 100%;
  box-sizing: border-box;
}

/* 表单项通用样式 */
.form-item {
  margin-bottom: 30rpx;
}

/* 标签通用样式 */
.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition-normal);
}

.card:active {
  transform: scale(0.98);
}

/* 文本溢出省略号 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 禁用状态 */
.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 页面通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
} 

.fade-in {
  animation: fadeIn 0.3s ease;
}

.slide-up {
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
} 
