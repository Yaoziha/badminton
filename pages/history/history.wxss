.history-container {
  padding: 24rpx;
  background: #f5f5f5;
}

.history-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.week-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.venue-info {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.signup-list {
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

.signup-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.signup-item {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 0;
} 