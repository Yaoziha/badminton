.history-container {
  padding: 24rpx;
  background: #f5f5f5;
}

.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx;
  box-shadow: var(--card-shadow);
  animation: slideUp 0.3s ease;
  transition: var(--transition-normal);
}

.week-header {
  background: linear-gradient(135deg, #007AFF, #0056b3);
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin: -24rpx -24rpx 24rpx -24rpx;
}

.venue-info {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 16rpx 0;
}

.venue-location {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.venue-time {
  font-size: 28rpx;
  color: #333;
}

.signup-list {
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
}

.signup-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.signup-item {
  padding: 12rpx 16rpx;
  margin: 8rpx 0;
  background: #f8f8f8;
  border-radius: 8rpx;
  transition: var(--transition-normal);
}

.signup-item:active {
  transform: translateX(10rpx);
} 