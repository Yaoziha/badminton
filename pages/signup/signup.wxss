.signup-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.status-box {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  text-align: center;
}

.status-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.signup-btn {
  background: linear-gradient(135deg, #007AFF, #0056b3);
  color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  margin: 32rpx 24rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition-normal);
}

.signup-btn:active {
  transform: scale(0.95);
}

.cancel-btn {
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  margin: 32rpx 24rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition-normal);
}

.cancel-btn:active {
  transform: scale(0.95);
}

/* 烟花效果样式 */
.fireworks {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
  background: rgba(0, 0, 0, 0.1); /* 降低背景透明度 */
  animation: fadeBackground 2s ease-out forwards; /* 添加背景淡出动画 */
}

/* 添加背景淡出动画 */
@keyframes fadeBackground {
  0% {
    background: rgba(0, 0, 0, 0.2);
  }
  100% {
    background: rgba(0, 0, 0, 0);
  }
}

.firework {
  position: absolute;
  bottom: 0;
  transform-origin: center;
}

/* 增加更多烟花位置和延迟变化 */
.firework:nth-child(1) { left: 20%; animation-delay: 0s; }
.firework:nth-child(2) { left: 40%; animation-delay: 0.4s; }
.firework:nth-child(3) { left: 60%; animation-delay: 0.8s; }
.firework:nth-child(4) { left: 80%; animation-delay: 0.2s; }
.firework:nth-child(5) { left: 30%; animation-delay: 0.6s; }
.firework:nth-child(6) { left: 70%; animation-delay: 1s; }

.trail {
  position: absolute;
  width: 10rpx; /* 加粗发射轨迹 */
  height: 40rpx; /* 加长发射轨迹 */
  background: linear-gradient(to top, rgba(255,255,255,0), #fff); /* 渐变轨迹 */
  animation: launch 1.5s ease-out forwards;
}

.particles {
  position: absolute;
  width: 20rpx; /* 增大粒子尺寸 */
  height: 20rpx;
  animation: explode 1.2s ease-out forwards;
}

.particle {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  animation: spread 1.2s ease-out forwards;
  box-shadow: 0 0 20rpx 4rpx currentColor; /* 增强发光效果 */
}

/* 更丰富的粒子颜色 */
.particle:nth-child(1) { transform: rotate(0deg); background: #ff3333; }
.particle:nth-child(2) { transform: rotate(30deg); background: #ff9933; }
.particle:nth-child(3) { transform: rotate(60deg); background: #ffff33; }
.particle:nth-child(4) { transform: rotate(90deg); background: #33ff33; }
.particle:nth-child(5) { transform: rotate(120deg); background: #33ffff; }
.particle:nth-child(6) { transform: rotate(150deg); background: #3333ff; }
.particle:nth-child(7) { transform: rotate(180deg); background: #ff33ff; }
.particle:nth-child(8) { transform: rotate(210deg); background: #ff5555; }
.particle:nth-child(9) { transform: rotate(240deg); background: #ffaa55; }
.particle:nth-child(10) { transform: rotate(270deg); background: #55ff55; }
.particle:nth-child(11) { transform: rotate(300deg); background: #55ffff; }
.particle:nth-child(12) { transform: rotate(330deg); background: #5555ff; }

@keyframes launch {
  0% {
    bottom: 0;
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
  100% {
    bottom: 80vh;
    opacity: 0;
    transform: scale(0.8);
  }
}

@keyframes explode {
  0% {
    opacity: 0;
    transform: scale(0.1);
    bottom: 80vh;
  }
  50% {
    opacity: 1;
    transform: scale(3); /* 增大爆炸范围 */
  }
  100% {
    opacity: 0;
    transform: scale(4); /* 增大爆炸范围 */
    bottom: 80vh;
  }
}

@keyframes spread {
  0% {
    transform: rotate(var(--angle)) translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    opacity: 1;
    transform: rotate(var(--angle)) translateY(150rpx) scale(1.5); /* 增加扩散范围 */
  }
  100% {
    transform: rotate(var(--angle)) translateY(300rpx) scale(0); /* 增加扩散范围 */
    opacity: 0;
  }
}

/* 添加粒子轨迹效果 */
.particle::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: inherit;
  filter: blur(4rpx);
  opacity: 0.6;
}

.fireworks-canvas {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  pointer-events: none;
} 