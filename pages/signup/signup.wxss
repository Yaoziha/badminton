.signup-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.status-box {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  text-align: center;
}

.status-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.signup-btn {
  width: 80%;
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.signup-btn::after {
  border: none;
}

.cancel-btn {
  width: 80%;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.cancel-btn::after {
  border: none;
} 

 