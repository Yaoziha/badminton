/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 12rpx;
  background-color: #f5f5f5;
}

/* 角色信息行 */
.header-row {
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.role-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.role-name {
  font-size: 32rpx;
  font-weight: bold;
}

.change-role {
  color: #007AFF;
  font-size: 28rpx;
  margin-left: 40rpx;
  padding-left: 40rpx;
}

.edit-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

/* 场地信息行 */
.venue-brief {
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.venue-status {
  font-size: 28rpx;
  color: #333;
}

/* 报名名单区域 */
.signup-section {
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.signup-list {
  padding: 0;
}

.list-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.no-signup {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 12rpx 0;
}

.login-btn {
  width: 100%;
  background-color: #007AFF;
  color: #fff;
  font-size: 28rpx;
  margin: 0;
  padding: 8rpx 0;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 26rpx;
}

.delete-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.booking-info {
  margin: 10rpx 20rpx;
  padding: 15rpx 20rpx;
}

.booking-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.booking-item {
  padding: 8rpx 0;
  font-size: 26rpx;
}
